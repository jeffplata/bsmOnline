<h4>{{=title}}</h4>
{{if grid.view_form or grid.update_form or grid.create_form:}}
    <div class="col-md-6">
        {{=grid}}
        {{if grid.update_form:}}
            {{=LOAD(f='user_group.load', ajax=True, target='user_group_div')}}
            <hr>
            {{=LOAD(f='user_warehouse.load', ajax=True, target='user_warehouse_div')}}
        {{pass}}
    </div>
{{else:}}
    {{=grid}}
{{pass}}